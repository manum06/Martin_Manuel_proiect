@page
@model Martin_Manuel_proiect.Pages.Phones.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Phone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Phone.ID" />
            <div class="form-group">
                <label asp-for="Phone.Model" class="control-label"></label>
                <input asp-for="Phone.Model" class="form-control" />
                <span asp-validation-for="Phone.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.Brand" class="control-label"></label>
                <input asp-for="Phone.Brand" class="form-control" />
                <span asp-validation-for="Phone.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.Price" class="control-label"></label>
                <input asp-for="Phone.Price" class="form-control" />
                <span asp-validation-for="Phone.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.PublishingDate" class="control-label"></label>
                <input asp-for="Phone.PublishingDate" class="form-control" />
                <span asp-validation-for="Phone.PublishingDate" class="textdanger"></span>
            </div>
            <label asp-for="Phone.Supplier" class="control-label">Publisher Name</label>
            <select asp-for="Phone.Supplier" class="form-control" asp-items="ViewBag.Supplier">
            </select>
            <span asp-validation-for="Phone.Supplier" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
